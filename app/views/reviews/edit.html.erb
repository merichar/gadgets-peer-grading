<div id="review">
<h1>Peer Grading Sheet</h1>
<h2>Presenter: <%= @review.presenter.name %></h2>
<%= form_for @review do |f| %>
<h2>Game Name:</h2><%= f.text_field :game %>

<h3>Implementation</h3>
<%= range_field :review, :implementation_score, :step => "1", :min => "1", :max => "10", :onchange => "$('#iValue').text(this.value)" %><div id="iValue"><%= @review.implementation_score %></div>

<h3>Degree of Difficulty of the project</h3>
<%= range_field :review, :degree_of_difficulty_score, :step => "1", :min => "1", :max => "10", :onchange => "$('#dValue').text(this.value)" %><div id="dValue"><%= @review.degree_of_difficulty_score %></div>
<h3>Project 'coolness' and polish</h3>
<%= range_field :review, :coolness_score, :step => "1", :min => "1", :max => "10", :onchange => "$('#cValue').text(this.value)" %><div id="cValue"><%= @review.coolness_score %></div>
<h3>Constructive Comments:</h3>
<%= f.text_area :comments, :rows => "10"  %>

<%= f.submit "Save" %>

<% end %>
</div>
